<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />

            <stroke
                android:width="2dp"
                android:color="#2d2d2d" />
            <solid android:color="#fff" />
        </shape>
    </item>

    <item
        android:bottom="1dp" >
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />

            <stroke
                android:width="2dp"
                android:color="#fff" />
        </shape>
    </item>

</layer-list>
