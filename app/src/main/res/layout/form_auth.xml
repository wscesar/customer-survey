<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/authForm"
    style="@style/modalFormLayout"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:text="Acesso Restrito"
        style="@style/modalTitle" />

    <com.google.android.material.textfield.TextInputLayout style="@style/matchParent">
        <EditText
            style="@style/modalText"
            android:inputType="textPassword"
            android:hint="Senha"
            android:id="@+id/authPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/authButton"
        style="@style/modalButton" />

</LinearLayout>