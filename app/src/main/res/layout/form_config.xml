<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/configForm"
    style="@style/modalFormLayout"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:text="Configurar rede"
        style="@style/modalTitle" />

    <com.google.android.material.textfield.TextInputLayout style="@style/matchParent">

        <EditText
            android:hint="IP"
            android:id="@+id/ip"
            style="@style/modalText" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout style="@style/matchParent">

        <EditText
            android:hint="Porta"
            android:id="@+id/port"
            android:inputType="number"
            android:maxLength="5"
            style="@style/modalText" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout style="@style/matchParent">

        <EditText
            android:hint="WiFI"
            android:id="@+id/ssid"
            style="@style/modalText" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout style="@style/matchParent">

        <EditText
            android:hint="Senha"
            android:id="@+id/pass"
            android:inputType="textPassword"
            style="@style/modalText" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/saveNetworkButton"
        style="@style/modalButton" />

</LinearLayout>